<%- pageCss = `
<style>
    .ck-editor__editable {
        min-height: 470px; /* Set your desired height */
    }
</style>
` %>

<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0"><%- (faq == '') ? 'Add' : 'Edit' %> FAQs</h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted">
                    <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                </li>
                <li class="breadcrumb-item text-muted"><%- (faq == '') ? 'Add' : 'Edit' %> FAQs</li>
            </ul>
        </div>
    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-fluid">
        <div class="card card-xl-stretch">
            <div class="card-body align-items-center justify-content-between flex-wrap">
                <div class="me-2">
                    <form class="form fv-plugins-bootstrap5 fv-plugins-framework" method="post"
                        id="addEditForm" enctype="multipart/form-data">

                        <input type="hidden" name="faq_id" value="<%- (faq) ? faq.id : '' %>">
                        <div class="row">
                            <div class="col-md-4 mb-3 fv-row fv-plugins-icon-container">
                                <div class="row">
                                    <div class="col-md-10">
                                        <label class="fw-semibold mb-2 required">Faq Category</label>
                                        <select name="category" id="category" class="form-select"
                                        data-control="select2" data-placeholder="Select Faq Category"
                                        data-hide-search="true">
                                            <option value=""></option>
                                            <% if(categories.length> 0) {
                                                categories.forEach((value, index) => {
                                                %>
                                                <option value="<%- value.id %>" <%- (faq && faq.category_id == value.id) ? 'selected' : '' %>><%- value.faq_category_name %></option>
                                                <%
                                                });
                                            } %>
                                        </select>
                                        <span class="error text-danger error-text category-error"></span>
                                    </div>
                                    <div class="col-md-1 mt-5">
                                        <a href="javascript:void(0);" data-bs-toggle="modal" data-bs-target="#addEditModal"
                                                class="btn btn-sm fw-bold btn-primary mt-4"> + </a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-8 mb-3 fv-row fv-plugins-icon-container" >
                                <div class="row">
                                    <div class="col-md-12">
                                        <label class="fw-semibold mb-2 required">Question</label>
                                            <input type="text" class="form-control"
                                                placeholder="Question" id="question" name="question"
                                                value="<%= (faq) ? faq.question : '' %>">
                                            <span class="error text-danger error-text question-error"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 mb-3 fv-row fv-plugins-icon-container">
                                <label class="fw-semibold mb-2 required">Answer</label>
                                    <textarea name="answer" id="answer_info"
                                    class="form-control "><%= (faq) ? faq.answer : '' %></textarea>
                                    <span class="error text-danger error-text answer-error"></span>
                            </div>
                        </div>
                        <div class="col-md-12 text-end">
                            <button type="submit" class="btn btn-sm btn-primary">Save</button>
                            <a href="/admin/faqs" class="btn btn-sm btn-secondary">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addEditModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="viewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <form id="addEditCategoryForm" method="post" enctype="multipart/form-data" class="modal-content" autocomplete="off">
            <div class="modal-header py-2">
                <h1 class="modal-title fs-5" id="viewModalLabel">Add Faq Category</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label for="name" class="form-label required">FAQ Category</label>
                                <input type="text" id="faq_category" name="faq_category" class="form-control" >
                                <span class="error text-danger error-text faq_category-error"></span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer py-2">
                <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal"
                    id="btnclose">Close</button>
                    <button type="submit" class="btn btn-sm btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<%- pageJs = `
<script src="/plugins/custom/ckeditor/ckeditor-classic.bundle.js"></script>
<script src="/js/pages/faqs.js"></script>
` %>
