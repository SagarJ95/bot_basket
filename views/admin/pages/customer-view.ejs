<div class="d-flex flex-column flex-column-fluid">
  <div id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 ">
    <div id="kt_app_toolbar_container" class="app-container   d-flex flex-stack ">
      <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
        <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
          Account Overview
        </h1>
        <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
          <li class="breadcrumb-item text-muted">
            <a href="/admin/dashboard" class="text-muted text-hover-primary">
              Home </a>
          </li>
          <li class="breadcrumb-item">
            <span class="bullet bg-gray-500 w-5px h-2px"></span>
          </li>
          <li class="breadcrumb-item text-muted">
            Customer </li>


        </ul>
      </div>
    </div>
  </div>
  <div id="kt_app_content" class="app-content  flex-column-fluid ">
    <div id="kt_app_content_container" class="app-container   ">
      <div class="card mb-5 mb-xl-10">
        <div class="card-body pt-9 pb-0">
          <div class="d-flex flex-wrap flex-sm-nowrap">
            <div class="me-7 mb-4">
              <div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative">
                <img src="/media/avatars/blank.png" alt="image">
              </div>
            </div>
            <div class="flex-grow-1">
              <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                <div class="d-flex flex-column">
                  <div class="d-flex align-items-center mb-2">
                    <a href="javascript:void(0)" class="text-gray-900 text-hover-primary fs-2 fw-bold me-2">
                      <%= (customer) ? customer.first_name + ' ' + customer.last_name : '' %>
                      <i class="ki-duotone ki-verify fs-1 text-primary">
                        <span class="path1"></span>
                        <span class="path2"></span>
                      </i>
                    </a>
                    <span class="badge badge-success badge-lg me-auto">Active</span>

                  </div>
                  <input type="hidden" id="customer_id" value="<%= (customer) ? customer.id : '' %>">
                  <div class="fw-semibold fs-6 mb-4 pe-2">
                    <div class="d-flex align-items-center text-gray-500 text-hover-primary mb-2">
                      <i class="fas fa-phone fs-4 me-2"></i>
                      <%= (customer) ? customer.phone_no : '' %>
                    </div>

                    <div class="d-flex align-items-center text-gray-500 text-hover-primary mb-2">
                      <i class="ki-duotone ki-sms fs-1 me-2">
                        <span class="path1"></span><span class="path2"></span>
                      </i>
                      <%= (customer) ? customer.email : '' %>
                    </div>

                    <div class="d-flex align-items-center text-gray-500 text-hover-primary mb-2">
                      <i class="ki-duotone ki-geolocation fs-1 me-1">
                        <span class="path1"></span>
                        <span class="path2"></span>
                      </i>
                      <%= (customer) ? customer.country : '' %>
                    </div>
                  </div>

                </div>
              </div>
            </div>
          </div>
          <ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bold">
            <li class="nav-item mt-2">
              <a class="nav-link text-active-primary ms-0 me-10 py-5 active" data-src='0' data-value="overview" data-bs-toggle="tab" href="#current_subscriptions">
                Current Subscription </a>
            </li>
            <li class="nav-item mt-2">
              <a class="nav-link text-active-primary ms-0 me-10 py-5 " data-src='3' data-value="courses_purchased" data-bs-toggle="tab" href="#courses_purchased">
                Courses Purchased </a>
            </li>

            <li class="nav-item mt-2">
              <a class="nav-link text-active-primary ms-0 me-10 py-5 " data-src='2' data-value="payment_history" data-bs-toggle="tab" href="#payment_history">
                Payment History </a>
            </li>
            <li class="nav-item mt-2">
              <a class="nav-link text-active-primary ms-0 me-10 py-5 " data-src='4' data-value="logs" data-bs-toggle="tab" href="#logs">
                Logs </a>
            </li>
          </ul>
        </div>
      </div>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="current_subscriptions" role="tabpanel">
          <div class="card mb-5 mb-xl-10">
            <div class="card-header cursor-pointer">
              <div class="card-title m-0">
                <h3 class="fw-bold m-0">Current Subscription</h3>
              </div>
            </div>
            <div class="card-body p-9">
              <div class="row">
                <div class="card card-flush pt-3 mb-5 mb-xl-10">

                  <div class="card-body pt-3">
                    <div class="mb-3">

                      <% if (subscription && Object.keys(subscription).length > 0) { %>
                      <div class="d-flex flex-wrap py-5">

                        <div class="flex-equal">
                          <table class="table fs-6 fw-semibold gs-0 gy-2 gx-2 m-0">
                            <tbody>
                              <tr>
                                <td class="text-gray-500 min-w-175px w-175px">Transaction Id:</td>
                                <td class="text-gray-800 min-w-200px">
                                  <span href="#" class="text-gray-800 text-hover-primary"><%= subscription.transaction_id %></span>
                                </td>
                              </tr>
                              <tr>
                                <td class="text-gray-500 min-w-175px w-175px">Subscription:</td>
                                <td class="text-gray-800 min-w-200px">
                                  <span href="#" class="text-gray-800 text-hover-primary"><%= subscription.plan_name  %></span>
                                </td>
                              </tr>
                              <tr>
                                <td class="text-gray-500">Subscription Fees:</td>
                                <td class="text-gray-800">
                                  ₹ <%= subscription.subtotal  %> / <%= subscription.plan_type  %>
                                </td>
                              </tr>
                              <tr>
                                <td class="text-gray-500">Billing method:</td>
                                <td class="text-gray-800">
                                  <%= subscription.plan_type  %>
                                </td>
                              </tr>
                              <tr>
                                <td class="text-gray-500">Currency:</td>
                                <td class="text-gray-800">IND - Rupees</td>
                              </tr>

                              <tr>
                                <td class="text-gray-500 min-w-175px w-175px">Tax(<%= subscription.service_tax_percentage  %>):</td>
                                <td class="text-gray-800 min-w-200px">
                                  <span href="#" class="text-gray-800 text-hover-primary">₹ <%= subscription.service_tax_amount %></span>
                                </td>
                              </tr>
                              <tr>
                                <td class="text-gray-500 min-w-175px w-175px">Tax(<%= subscription.gst_percentage  %>):</td>
                                <td class="text-gray-800 min-w-200px">
                                  <span href="#" class="text-gray-800 text-hover-primary">₹ <%= subscription.gst_amount %></span>
                                </td>
                              </tr>
                              <tr>
                                <td class="text-gray-500">Total:</td>
                                <td class="text-gray-800">
                                  ₹ <%= subscription.total  %>
                                </td>
                              </tr>
                            </tbody>
                          </table>
                        </div>

                        <div class="flex-equal">
                          <h5 class="mb-4">Plan Features:</h5>
                          <table class="table fs-6 fw-semibold gs-0 gy-2 gx-2 m-0">
                            <tbody>

                              <tr>
                                <td class="text-gray-500 min-w-175px w-175px">Simultaneous Devices:</td>
                                <td class="text-gray-800 min-w-200px">
                                  <a href="#" class="text-gray-800 text-hover-primary"><%= subscription.simaltaneous_devices_accessible %></a>
                                </td>
                              </tr>
                              <tr>
                                <td class="text-gray-500">Download:</td>
                                <td class="text-gray-800">
                                  <%= subscription.download_devices  %>
                                </td>
                              </tr>

                              <tr>
                                <td class="text-gray-500">Course:</td>
                                <td class="text-gray-800">
                                  <%= subscription.courses  %>
                                </td>
                              </tr>

                              <tr>
                                <td class="text-gray-500">Craftschool Sessions:</td>
                                <td class="text-gray-800">
                                  <%= subscription.craftschool_sessions_access  %>
                                </td>
                              </tr>

                              <tr>
                                <td class="text-gray-500">Supported Devices:</td>
                                <td class="text-gray-800">
                                  <%= subscription.supported_devices  %>
                                </td>
                              </tr>

                              <tr>
                                <td class="text-gray-500">Community Access:</td>
                                <td class="text-gray-800">
                                  <%= subscription.community_access  %>
                                </td>
                              </tr>

                            </tbody>
                          </table>
                        </div>

                      </div>
                      <% }else{ %>
                      <div class="d-flex flex-wrap py-5">
                        <p>No Current Active Subscription</p>
                      </div>

                      <% } %>
                    </div>


                  </div>
                </div>

              </div>


            </div>
          </div>
        </div>
        <div class="tab-pane fade " id="courses_purchased" role="tabpanel">
          <div class="card mb-5 mb-xl-10">
            <div class="card-header cursor-pointer">
              <div class="card-title m-0">
                <h3 class="fw-bold m-0">Courses Purchased</h3>
              </div>
            </div>
            <div class="card-body p-9">
              <div class="row">
                <div class="card card-flush pt-3 mb-5 mb-xl-10">

                  <div class="card-body pt-3">
                    <div class="table-responsive">
                      <table class="table align-middle table-row-dashed fs-6 gy-4 mb-0">
                        <thead>
                          <tr class="border-bottom border-gray-200 text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                            <th class="min-w-150px">Course Name</th>
                            <th class="min-w-125px">Transaction ID</th>

                            <th class="min-w-125px">Sub Total</th>
                            <th class="min-w-125px">Service Tax</th>
                            <th class="min-w-125px">Gst</th>
                            <th class="min-w-125px">Total</th>

                          </tr>
                        </thead>
                        <tbody class="fw-semibold text-gray-800">

                          <% if (baught_courses.length > 0) { %>
                          <% baught_courses.forEach(course => { %>
                          <tr>
                            <td>
                              <label class="w-150px"><%= course.course_names %></label>
                            </td>
                            <td><span class="badge badge-light-danger"><%= course.transaction_id %></span></td>
                            <td>₹ <%= course.subtotal %></td>
                            <td><%= course.service_tax_percentage %>%(<%= '₹'+course.service_tax_amount %>)</td>
                            <td><%= course.gst_percentage %>%(<%= '₹'+course.gst_amount %>)</td>
                            <td>₹ <%= course.total %></td>
                          </tr>
                          <% }); %>
                          <% } else { %>
                          <tr>
                            <td colspan="6" class="text-center">No courses found</td>
                          </tr>
                          <% } %>


                        </tbody>
                      </table>
                    </div>

                  </div>
                </div>

              </div>


            </div>
          </div>
        </div>

        <div class="tab-pane fade " id="payment_history" role="tabpanel">
          <div class="card mb-5 mb-xl-10">
            <div class="card-header cursor-pointer">
              <div class="card-title m-0">
                <h3 class="fw-bold m-0">Payment History</h3>
              </div>
            </div>

            <div class="card-body p-3">

              <div class="row">

                <table class="table align-middle table-row-dashed fs-6 gy-4 mb-0" id="data_table">
                  <thead class="">
                    <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">

                      <th class="text-center">Customer</th>

                      <th class="text-center">Customer Phone</th>
                      <th class="text-center">Status</th>
                      <th class="text-center">Billing Amount</th>
                      <th class="text-center">Product</th>
                      <th class="text-center">Subscription Start Date</th>
                      <th class="text-center">Subscription End Date</th>
                      <th class="text-center">Created Date</th>
                      <th class="text-center">Actions</th>
                    </tr>
                  </thead>
                  <tbody>

                  </tbody>
                </table>
              </div>
            </div>

          </div>
        </div>

        <div class="tab-pane fade " id="settings" role="tabpanel">
          <div class="card mb-5 mb-xl-10">
            <div class="card-header border-0 cursor-pointer" role="button" data-bs-toggle="collapse" data-bs-target="#kt_account_profile_details" aria-expanded="true" aria-controls="kt_account_profile_details">
              <div class="card-title m-0">
                <h3 class="fw-bold m-0">Profile Details</h3>
              </div>
            </div>
            <div id="kt_account_settings_profile_details" class="collapse show">
              <form id="kt_account_profile_details_form" class="form fv-plugins-bootstrap5 fv-plugins-framework" novalidate="novalidate">
                <div class="card-body border-top p-9">
                  <div class="row mb-6">
                    <label class="col-lg-4 col-form-label fw-semibold fs-6">Avatar</label>
                    <div class="col-lg-8">
                      <div class="image-input image-input-outline" data-kt-image-input="true" style="background-image: url('/media/svg/avatars/blank.svg')">
                        <div class="image-input-wrapper w-125px h-125px" style="background-image: url(/media/avatars/blank.png)"></div>
                      </div>
                      <div class="form-text">Allowed file types: png, jpg, jpeg.</div>
                    </div>
                  </div>
                  <div class="row mb-6">
                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Full Name</label>
                    <div class="col-lg-8">
                      <div class="row">
                        <div class="col-lg-6 fv-row fv-plugins-icon-container">
                          <input type="text" name="fname" id="fname" class="form-control form-control-lg form-control-solid mb-3 mb-lg-0" placeholder="First name" value="">
                          <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                        </div>
                        <div class="col-lg-6 fv-row fv-plugins-icon-container">
                          <input type="text" name="lname" id="lname" class="form-control form-control-lg form-control-solid" placeholder="Last name" value="">
                          <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row mb-6">
                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Email</label>
                    <div class="col-lg-8 fv-row fv-plugins-icon-container">
                      <input type="text" name="email" id="emailId" class="form-control form-control-lg form-control-solid" placeholder="Company name" value="">
                      <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                    </div>
                  </div>
                  <div class="row mb-6">
                    <label class="col-lg-4 col-form-label fw-semibold fs-6">
                      <span class="required">Contact Phone</span>
                      <span class="ms-1" data-bs-toggle="tooltip" aria-label="Phone number must be active" data-bs-original-title="Phone number must be active" data-kt-initialized="1">
                        <i class="ki-duotone ki-information-5 text-gray-500 fs-6"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i></span> </label>
                    <div class="col-lg-8 fv-row fv-plugins-icon-container">
                      <input type="tel" name="phone" id="mobile_no" class="form-control form-control-lg form-control-solid" placeholder="Phone number" value="">
                      <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                    </div>
                  </div>
                </div>
                <div class="row mb-6">
                  <label class="col-lg-4 col-form-label required fw-semibold fs-6">Country</label>
                  <div class="col-lg-8 fv-row fv-plugins-icon-container">
                    <input type="text" name="country_name" id="country_name" class="form-control form-control-lg form-control-solid" placeholder="Country name" value="">
                    <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                  </div>
                </div>
                <input type="hidden">
              </form>
            </div>
          </div>
        </div>
        <div class="tab-pane fade " id="logs" role="tabpanel">
          <div class="card mb-5 mb-lg-10">
            <div class="card-header">
              <div class="card-title">
                <h3>Login Sessions</h3>
              </div>
              <div class="card-toolbar">
              </div>
            </div>
            <div class="card-body p-4">
              <div class="table-responsive mt-4 m-1">
                <table class="table align-middle table-row-bordered table-row-solid gy-4 gs-9" id="login_data_table">
                  <thead class="border-gray-200 fs-5 fw-semibold bg-lighten">
                    <tr>
                      <th class="min-w-150px">Device</th>
                      <th class="min-w-150px">Browsers</th>
                      <th class="min-w-150px">IP Address</th>
                      <th class="min-w-150px">Login Time</th>
                      <th class="min-w-150px">Logout Time</th>
                    </tr>
                  </thead>
                  <tbody class="fw-6 fw-semibold text-gray-600" id="login_session">
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" tabindex="-1" id="subscription_modal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content position-absolute">
      <div class="modal-header">
        <h5 class="modal-title">Subscription Details</h5>

        <!--begin::Close-->
        <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
          <i class="ki-duotone ki-cross fs-2x"><span class="path1"></span><span class="path2"></span></i>
        </div>

      </div>

      <div class="modal-body">
        <div class="row" id="subscription_div">

        </div>
      </div>


      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>

      </div>
    </div>
  </div>
</div>


