<%- pageCSS = `
<link href="/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css"/>
` %>

<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Masters</h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted">
                    <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                </li>
                <li class="breadcrumb-item text-muted">Masters</li>
            </ul>
        </div>
        <div class="d-flex align-items-center gap-2 gap-lg-3">
            <a href="javascript:void(0);" data-bs-toggle="modal" data-bs-target="#addEditModal" class="btn btn-sm fw-bold btn-primary">Add New</a>
        </div>
    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-fluid">
        <div class="card card-flush">
            <div class="card-body">
                <table class="table table-rounded border align-middle w-100" id="masters_table">
                    <thead class="bg-light-secondary text-uppercase">
                        <tr class="fw-semibold fs-7 text-gray-700 border-bottom border-gray-200">
                            <th hidden class="">Id</th>
                            <th class="">Rank</th>
                            <th class="">Photo</th>
                            <th class="">Name</th>
                            <th class="">Profession</th>
                            <th class="">Created/Updated By</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Trending</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addEditModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <form id="addEditForm" method="post" enctype="multipart/form-data" class="modal-content">
            <input type="hidden" name="master_id">
            <% if (access_routes.Masters.MastersTeachers[0].permission === "1") { %>
            <div class="modal-header py-2">
                <h1 class="modal-title fs-5" id="addEditModalLabel">Add Master</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <% } %>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <img src="https://placehold.co/250x350" id="mediaPreview" class="img-fluid" alt="placeholder">
                        </div>
                        <input type="file" accept=".jpg,.jpeg,.png,.webp" name="photo" id="photo" class="form-control">
                        <span class="text-danger photo-error"></span>
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="name" class="form-label required">Name</label>
                                <input type="text" id="name" name="name" class="form-control">
                                <span class="text-danger error-text name-error"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="profession" class="form-label required">Profession</label>
                                <input type="text" id="profession" name="profession" class="form-control">
                                <span class="text-danger error-text profession-error"></span>
                            </div>
                            <div class="col-12">
                                <label class="d-flex align-items-center fs-6 fw-semibold form-label mb-2">
                                  Awards
                                </label>
                                <textarea class="form-control " placeholder="Enter Awards" id="awards" name="awards">
                                </textarea>
                            </div>
                            <div class="col-12">
                                <label class="d-flex align-items-center fs-6 fw-semibold form-label mb-2">
                                  Tags
                                </label>
                                <textarea class="form-control " placeholder="Enter tags" id="tags" name="tags">
                                </textarea>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label for="bio" class="form-label required">Bio</label>
                                <textarea name="bio" rows="5" id="bio" class="form-control"></textarea>
                                <span class="text-danger error-text bio-error"></span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer py-2">
                <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-sm btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
<script>
    const isActionVisible = <%- access_routes.Masters.MastersTeachers[0].permission  === "1" ? 'true' : 'false'; %>;
</script>
<%- pageJs = `
<script src="/plugins/custom/datatables/datatables.bundle.js"></script>
<script src="/js/pages/master.js"></script>
` %>
