<%- pageCSS = `
<link href="/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css"/>
` %>

<style>
.img-fluid1 {
    width: 350px !important;
    height: 300px !important;
}

.video-fluid1
{
    width: 450px !important;
    height: 300px !important;
}

/* .symbol>video
{
    width: 550px;


} */
</style>
<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
  <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
    <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
      <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Craftschool Services</h1>
      <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
        <li class="breadcrumb-item text-muted">
          <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
        </li>


        <li class="breadcrumb-item">
          <span class="bullet bg-gray-500 w-5px h-2px"></span>
        </li>
        <li class="breadcrumb-item text-muted">Craftschool Services</li>
      </ul>
    </div>

  </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
  <div id="kt_app_content_container" class="app-container container-fluid">


    <div class="card card-flush">
      <div class="card-body">
        <div class="row g-5 g-xl-8">
            <!--begin::Col-->

            <% craftschool_services.forEach(service => { %>
                <div class="<%= service.media2=='' ? 'col-xl-4' : 'col-xl-9' %>">

                    <!--begin::Mixed Widget 9-->
                    <div class="card card-xl-stretch mb-xl-8">
                        <!--begin::Body-->
                        <div class="card-body d-flex flex-column pb-10 pb-lg-15">
                            <div class="flex-grow-1">
                                <!--begin::Info-->
                                <div class="d-flex align-items-center pe-2 mb-5">
                                    <span class="text-muted fw-bold fs-5 flex-grow-1"></span>
                                    <div class="symbol symbol-50px">
                                        <div class="d-flex flex-wrap my-1">
                                            <!--begin::Select wrapper-->
                                            <div class="m-0">
                                                <!--begin::Select-->
                                                <% if(access_routes.CMS.CraftschoolServices[0].permission  === "1") { %>
                                                <button type="button" class="btn btn-light-primary" onClick="edit_services(<%= service.id %>)">Edit</button>
                                                <% } %>

                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <a href="#" class="text-gray-900 fw-bold text-hover-primary fs-4">
                                    <%= service.title %>
                                </a>

                                <p class="py-3">
                                    <%= service.description %>
                                </p>
                            </div>
                            <!--begin::Team-->
                            <div class="row align-items-center">
                                <% const isImage = (file) => file.match(/\.(jpeg|jpg|png|gif|webp)$/i); %>

                                <% if (service.media1) { %>
                                    <div class="col-6">
                                        <a href="#" class="symbol" data-bs-toggle="tooltip" >
                                            <% if (isImage(service.media1)) { %>
                                                <img src="<%= service.media1 %>" alt="<%= service.title %>" class="img-fluid1" >
                                            <% } else { %>
                                                <video controls class="video-fluid1" >
                                                    <source src="<%= service.media1 %>" type="video/mp4">
                                                    Your browser does not support the video tag.
                                                </video>
                                            <% } %>
                                        </a>
                                    </div>
                                <% } %>
                            </div>


                            <!--end::Team-->
                        </div>
                        <!--end::Body-->
                    </div>
                    <!--end::Mixed Widget 9-->
                </div>
            <% }) %>

        </div>


      </div>
    </div>




  <!-- Modal -->
  <div class="modal fade" id="edit_services" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Craftschool Services</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            <form id="service_data_form" class="form" action="#" enctype="multipart/form-data" method="POST">

                <div class="row fv-row mt-5">
                    <input type="hidden" name="service_id" id="service_id" value="">
                  <div class="col-6">
                    <label class="d-flex align-items-center fs-6 fw-semibold form-label mb-2">
                      <span class="required">Title</span>
                    </label>
                    <input type="text" class="form-control fail_message" placeholder="Enter Title" name="title" id="title" value="" />
                  </div>

                  <div class="col-6">
                    <label class="d-flex align-items-center fs-6 fw-semibold form-label mb-2">
                      <span class="required">Description</span>
                    </label>
                    <textarea class="form-control fail_message" placeholder="Enter short description" id="description" name="description"></textarea>
                  </div>

                  <div class="col-6 ">
                    <label class="fs-6 fw-semibold form-label mb-2"><span class="required">Services Media 1</span> </label>
                    <input type="file" class="form-control fail_message" name="media1" id="media1" />
                  </div>



                </div>

            </form>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="save_service">Save changes</button>
        </div>
      </div>
    </div>
  </div>


  </div>
</div>

<%- pageJs = `
<script src="/plugins/custom/datatables/datatables.bundle.js"></script>
<script src="/js/pages/craftschoolServices.js"></script>
` %>
