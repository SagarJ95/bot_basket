<%- pageCSS = `
<link href="/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css"/>
` %>

<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
  <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
    <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
      <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Course Topic</h1>
      <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
        <li class="breadcrumb-item text-muted">
          <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
        </li>
        <li class="breadcrumb-item">
            <span class="bullet bg-gray-500 w-5px h-2px"></span>
          </li>
        <li class="breadcrumb-item text-muted">
            <a href="/admin/course-list" class="text-muted text-hover-primary">Courses</a>
          </li>
        <li class="breadcrumb-item">
          <span class="bullet bg-gray-500 w-5px h-2px"></span>
        </li>
        <li class="breadcrumb-item text-muted">Course Topic</li>
      </ul>
    </div>
    <div class="d-flex align-items-center gap-2 gap-lg-3">
      <!-- <a href="javascript:void(0);" class="btn btn-sm fw-bold btn-secondary">Filter</a> -->
      <a href="/admin/course-list" class="btn btn-sm fw-bold btn-primary">Back</a>

    </div>
  </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
  <div id="kt_app_content_container" class="app-container container-fluid">
    <div class="card card-flush mb-4">
      <div class="card-body py-4">
        <div class="filter">
          <form id="topic_data_form" class="form" action="#" enctype="multipart/form-data" method="POST">

            <input type="hidden" id="topic_page_course_id" name="course_id" value="<%= courseid %>">
            <input type="hidden" value="" id="topic_id" name="topic_id">
            <div class="row fv-row mt-5">
              <div class="col-4">
                <label class="d-flex align-items-center fs-6 fw-semibold form-label mb-2">
                  <span class="required">Topic</span>
                </label>
                <input type="text" class="form-control fail_message" placeholder="Enter Topic" name="topic" id="topic" value="" />
              </div>

              <div class="col-4 ">
                <label class="fs-6 fw-semibold form-label mb-2"><span class="required">Topic Video</span> </label>
                <input type="file" class="form-control fail_message" name="topic_video" id="topic_video" />
              </div>

              <div class="col-1 topic_video_view_div d-none">

                <a target='_blank' id="topic_video_view" href='' class="btn btn-icon btn-bg-light btn-active-color-dark btn-sm me-1 mt-10" data-bs-toggle="tooltip" data-bs-placement="top" title="topic video">
                  <i class="fas fa-eye">
                    <span class="path1"></span>
                    <span class="path2"></span>
                  </i>
                </a>
              </div>

              <div class="col-3">
                <label class="d-flex align-items-center fs-6 fw-semibold form-label mb-2">
                  <span class="required">Video duration</span>
                </label>
                <input type="text" class="form-control fail_message" placeholder="Video duration" name="video_duration" id="video_duration" value="" readonly/>

              </div>



            </div>

            <div class="row fv-row mt-5">
              <div class="col-4">
                <label class="d-flex align-items-center fs-6 fw-semibold form-label mb-2">
                  <span class="required">Free Video </span>
                </label>
                <select class="form-control form-select" name="free_video">
                    <option value="No" selected>No</option>
                    <option value="Yes">Yes</option>


                </select>
              </div>

              <div class="col-6">
                <label class="d-flex align-items-center fs-6 fw-semibold form-label mb-2">
                  <span class="required">Description</span>
                </label>
                <textarea class="form-control fail_message" placeholder="Enter short description" id="description" name="description"></textarea>
              </div>


            </div>

            <div class="row fv-row">
              <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-sm btn-primary" id="course_topic_button">Save</button>
                <!-- <button type="button" id="course_topic_button" class="btn btn-sm fw-bold btn-primary">
                <span class="indicator-label">Save</span>
                <span class="indicator-progress">Please wait...
                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
                </button> -->
              </div>
            </div>

            <!-- Submit Button -->

          </form>
        </div>
      </div>
    </div>

    <div class="card card-flush">
      <div class="card-body">
        <table class="table  borderalign-middle w-100" id="topic_data_table">
          <thead class="bg-light-secondary text-uppercase">
            <tr class="fw-semibold fs-7 text-gray-700 border-bottom border-gray-200">
              <th hidden class="min-w-125px">Id</th>
              <th  class="min-w-125px">Rank</th>
              <th class="">Course Name</th>
              <th class="">Topic</th>
              <th class="">Description</th>
              <th class="">Video</th>
              <th class="">Duration</th>
              <th class=" text-center">Free Video</th>
              <th class="">Status</th>
              <th class="">Created/Updated By</th>
              <!-- <th class="">Updated By</th> -->
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script>
  const isActionVisible = <%- access_routes.Masters.Courselist[0].permission  === "1" ? 'true' : 'false'; %>;
</script>
<%- pageJs = `
<script src="/plugins/custom/datatables/datatables.bundle.js"></script>
<script src="/js/pages/courseTopic.js"></script>
` %>
