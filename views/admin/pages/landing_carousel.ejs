<%- pageCSS = `
<link href="/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css"/>
<style>
    /* Hide file name */
.dz-filename {
    display: none !important;
}

/* Hide file size */
.dz-size {
    display: none !important;
}

/* Hide the progress bar */
.dz-progress {
    display: none !important;
}

</style>
` %>
<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
                Landing Carousel</h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted">
                    <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                </li>
                <li class="breadcrumb-item text-muted">Landing Carousel</li>
            </ul>
        </div>

        <% if (access_routes.CMS.LandingCarousel[0].permission === "1") { %>
        <div class="d-flex align-items-center gap-2 gap-lg-3">
            <a href="javascript:void(0);" data-bs-toggle="modal" data-bs-target="#addEditModal"
                class="btn btn-sm fw-bold btn-primary">Add</a>
        </div>
        <% } %>
    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-fluid">
        <div class="card card-flush">
            <div class="card-body">
                <table class="table table-rounded border align-middle w-100" id="carousel_table">
                    <thead class="bg-light-secondary text-uppercase">
                        <tr class="fw-semibold fs-7 text-gray-700 border-bottom border-gray-200">
                            <th hidden class="min-w-125px">Id</th>
                            <th class="min-w-125px">Rank</th>
                            <th class="min-w-125px">Carousel Image</th>
                            <th class="min-w-125px">Status</th>
                            <th class="min-w-100px">Created/Updated By</th>
                            <!-- <th class="min-w-100px">Updated By</th> -->
                            <th class="min-w-40px text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Adding Multiple Image -->
<div class="modal fade" id="addEditModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="addEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <form id="addEditForm" method="post" enctype="multipart/form-data" class="modal-content" autocomplete="off">
            <div class="modal-header py-2">
                <h1 class="modal-title fs-5" id="addEditModalLabel">Add Carousel Image</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <!-- Dropzone Area -->
                        <div class="dropzone" id="kt_dropzonejs_example_1">
                            <div class="dz-message needsclick">
                                <i class="ki-duotone ki-file-up fs-3x text-primary"></i>
                                <div class="ms-4">
                                    <h3 class="fs-5 fw-bold text-gray-900 mb-1">Drop images here or click to upload.</h3>
                                    <span class="fs-7 fw-semibold text-gray-500">Upload up to 10 images (PNG,JPG, SVG only, max 5 MB each)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer py-2">
                <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal" id="btnclose">Close</button>
                <button type="submit" class="btn btn-sm btn-primary" id="saveButton" >Save</button>
            </div>
        </form>
    </div>
</div>

<!-- Edit Image  -->
<div class="modal fade" id="EditImageModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="EditImageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <form id="EditImageForm" method="post" enctype="multipart/form-data" class="modal-content" autocomplete="off">
            <div class="modal-header py-2">
                <h1 class="modal-title fs-5" id="EditImageModalLabel">Edit Carousel Image</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <input type="hidden" id="carousel_id" name="carousel_id" class="form-control">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <img src="https://placehold.co/250x350" id="mediaPreview" class="img-fluid" alt="placeholder">
                        </div>
                        <input type="file" accept=".jpg,.jpeg,.png,.webp" name="carousel_photo" id="carousel_photo" class="form-control">
                        <span class="text-danger photo-error"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer py-2">
                <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal" id="btnclose">Close</button>
                <button type="submit" class="btn btn-sm btn-primary" id="EditButton" >Save</button>
            </div>
        </form>
    </div>
</div>

<script>
    const isActionVisible = <%- access_routes.CMS.LandingCarousel[0].permission  === "1" ? 'true' : 'false'; %>;
</script>
<%- pageJs = `
<script src="/plugins/custom/datatables/datatables.bundle.js"></script>
<script src="/js/pages/landingCarousel.js"></script>
` %>
