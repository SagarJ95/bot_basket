<%- pageCSS = `
<link href="/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css"/>
` %>
<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
                Users</h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted">
                    <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                </li>
                <li class="breadcrumb-item text-muted">Users</li>
            </ul>
        </div>



        <div class="d-flex align-items-center gap-2 gap-lg-3">
            <div class="m-0">
                <!--begin::Menu toggle-->
                <span id="filter_collapse" class="filter-text">
                  <i class="fa-solid fa-filter"></i> Filters
                </span>
              </div>
              <% if (access_routes.UserManagements.Users[0].permission === "1") { %>
            <a href="javascript:void(0);" data-bs-toggle="modal" data-bs-target="#addEditModal"
                class="btn btn-sm fw-bold btn-primary">Add User</a>
                <% } %>
        </div>

    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-fluid">
        <div class="card card-flush">

            <div class="card card-flush mb-3 filter_card hidden">
                <div class="card-body">
                  <form id="filterForm" class="form fv-plugins-bootstrap5 fv-plugins-framework">
                    <div class="row">
                      <div class="col-md-4 mb-3 fv-row fv-plugins-icon-container">
                        <label class="fw-semibold mb-2">Date Range</label>
                        <input type="text" class="form-control" name="range_date" id="range_date" value="" readonly>
                        </div>

                        <div class="col-md-4 mb-3 fv-row fv-plugins-icon-container">
                            <label class="fw-semibold mb-2">Role</label>
                            <select class="form-control" name="role" id="role">
                              <option value="">Select</option>
                              <% if (data) { %>
                                <% data.forEach(role => { %>
                                <option value="<%= role.id %>" ><%= role.role_name %></option>
                                <% }); %>
                                <% } %>
                            </select>
                          </div>

                        <div class="col-md-4 mb-3 fv-row fv-plugins-icon-container">
                          <label class="fw-semibold mb-2">Status</label>
                          <select class="form-control" name="status" id="status">
                            <option value="">Select</option>
                            <option value="1">Active</option>
                            <option value="0">Deactivate</option>
                          </select>
                        </div>

                    </div>
                    <div class="col-md-12 text-end">
                      <button type="button" class="btn btn-sm btn-primary" id="filter">Submit</button>
                      <button type="button" class="btn btn-sm btn-secondary" id="clear">Reset</button>

                    </div>
                  </form>
                </div>
              </div>

            <div class="card-body">
                <table class="table table-rounded border align-middle w-100" id="user_table">
                    <thead class="bg-light-secondary text-uppercase">
                        <tr class="fw-semibold fs-7 text-gray-700 border-bottom border-gray-200">
                            <th class="">Name</th>
                            <th class="">Email</th>
                            <th class="">Role</th>
                            <th class="text-center">Status</th>
                            <th class="">Created/Updated By</th>
                            <!-- <th class="">Updated By</th> -->
                            <th class="min-w-40px text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addEditModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="addEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <form id="addEditForm" method="post" enctype="multipart/form-data" class="modal-content" autocomplete="off">
            <div class="modal-header py-2">
                <h1 class="modal-title fs-5" id="addEditModalLabel">Add User</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <input type="hidden" id="user_id" name="user_id" class="form-control">
                            <div class="col-md-6 mb-3">
                                <label for="name" class="form-label required">Name</label>
                                <input type="text" id="name" name="name" class="form-control">
                                <span class="error text-danger name-error"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label required">Email</label>
                                <input type="text" id="email" name="email" class="form-control" autocomplete="off">
                                <span class="error text-danger email-error"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="role" class="form-label">Role</label>
                                <select class="form-control" id="role" name="role">
                                    <option value="">---- Select Role ----</option>
                                    <% if(data.length > 0) { %>
                                    <% for(var i=0; i < data.length; i++) { %>
                                    <option value="<%= data[i].id %>">
                                        <%= data[i].role_name %>
                                    </option>
                                    <% } %>
                                    <% } %>
                                </select>
                                <span class="error text-danger role-error"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="password" class="form-label required">Password</label>
                                <input type="password" id="password" name="password" class="form-control"
                                    autocomplete="off">
                                    <span class="error text-danger password-error"></span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer py-2">
                <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal"
                    id="btnclose">Close</button>
                <button type="submit" class="btn btn-sm btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<script>
    const isActionVisible = <%- access_routes.UserManagements.Users[0].permission  === "1" ? 'true' : 'false'; %>;
  </script>
<%- pageJs = `
<script src="/plugins/custom/datatables/datatables.bundle.js"></script>
<script src="/js/pages/user.js"></script>
` %>
