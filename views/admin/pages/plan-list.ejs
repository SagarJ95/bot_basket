<%- pageCSS = `
<link href="/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css"/>
` %>

<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Plans</h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted">
                    <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                </li>
                <li class="breadcrumb-item text-muted">Plans</li>
            </ul>
        </div>
        <% if(access_routes.Masters.PlanList[0].permission  === "1") { %>
        <div class="d-flex align-items-center gap-2 gap-lg-3">
            <!-- <a href="javascript:void(0);" class="btn btn-sm fw-bold btn-secondary">Filter</a> -->
            <a href="/admin/plan" class="btn btn-sm fw-bold btn-primary">Add New</a>
        </div>
        <% } %>
    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-fluid">
        <div class="card card-flush">
            <div class="card-body">

                <div class="row g-10">

                    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
                        <% plans.forEach(plan => { %>
                          <div class="col">
                            <div class="card h-100 shadow-sm">
                              <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                  <h4 class="card-title text-center mb-3 fw-bolder text-primary"><%= plan.plan_name %></h4>
                                  <h5 class="text-center mb-4 fw-bold">â‚¹<%= plan.cost %> - <%= plan.plan_type %></h5>
                                  <ul class="list-group list-group-flush mb-3">
                                    <!-- <li class="list-group-item d-flex justify-content-between">
                                      <span>EMI Type</span>
                                      <span class="text-primary fw-semibold"><%= plan.emi_type %></span>
                                    </li> -->
                                    <li class="list-group-item d-flex justify-content-between">
                                      <span>Simultaneous Devices</span>
                                      <span class="text-primary fw-semibold"><%= plan.simaltaneous_devices_accessible %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                      <span>Download Devices</span>
                                      <span class="text-primary fw-semibold"><%= plan.download_devices %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                      <span>Courses</span>
                                      <span class="text-primary fw-semibold text-end"><%= plan.course_names || plan.courses %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                      <span>Access Craftschool sessions</span>
                                      <span class="text-primary fw-semibold"><%= plan.craftschool_sessions %></span>

                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                      <span>Supported Devices</span>
                                      <span class="text-primary fw-semibold text-end"><%= plan.supported_devices %></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                      <span>Exclusive Community</span>
                                      <span class="text-primary fw-semibold"><%= plan.community_access %></span>
                                    </li>
                                  </ul>
                                </div>

                                <div class="row text-center justify-content-center align-items-center g-3">
                                  <% if(access_routes.Masters.PlanList[0].permission  === "1") { %>
                                    <!-- Edit Button -->
                                    <div class="col-auto">
                                        <a href="javascript:void(0)" onclick="return edit_data(<%= plan.id %>);"
                                            class="btn btn-icon btn-bg-light btn-active-color-dark btn-sm"
                                            data-bs-toggle="tooltip" data-bs-placement="top" title="Edit">
                                            <i class="ki-duotone text-dark ki-pencil fs-2">
                                                <span class="path1"></span><span class="path2"></span>
                                            </i>
                                        </a>
                                    </div>

                                    <!-- Delete Button -->
                                    <div class="col-auto">
                                        <a href="javascript:void(0)" onclick="return delete_data(<%= plan.id %>);"
                                            class="btn btn-icon btn-bg-light btn-active-color-danger btn-sm"
                                            data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                                            <i class="ki-duotone text-dark ki-trash fs-2">
                                                <span class="path1"></span><span class="path2"></span>
                                                <span class="path3"></span><span class="path4"></span><span class="path5"></span>
                                            </i>
                                        </a>
                                    </div>
                                    <% } %>

                                    <!-- Status Switch -->
                                    <div class="col-auto">
                                        <div class="form-check form-switch form-check-custom form-check-solid">
                                          <% if(access_routes.Masters.PlanList[0].permission  === "1") { %>
                                            <input class="form-check-input h-20px w-30px" type="checkbox"
                                            onchange="return plan_change_status(<%= plan.id %>, <%= plan.status == 1 ? 0 : 1 %>, this)"
                                                id="plan_<%= plan.id %>" <%= plan.status == 1 ? 'checked="checked"' : '' %> />
                                              <% } %>
                                            <label class="form-check-label <%= plan.status == 1 ? 'text-success' : 'text-dark' %>"
                                                for="plan_<%= plan.id %>">
                                                <% if (plan.status == 1) { %>
                                                  <span class="badge badge-success">Active</span>
                                              <% } else { %>
                                                  <span class="badge badge-danger">In-active</span>
                                              <% } %>

                                            </label>
                                        </div>
                                    </div>

                                    <!-- Publish Switch -->
                                    <!-- <div class="col-auto">
                                        <div class="form-check form-switch form-check-custom form-check-solid">
                                            <input class="form-check-input h-20px w-30px" type="checkbox"
                                                onchange="return change_publish_status(<%= plan.id %>, <%= plan.publish == 1 ? 0 : 1 %>)"
                                                id="plan_publish_<%= plan.id %>" <%= plan.publish == 1 ? 'checked="checked"' : '' %> />
                                            <label class="form-check-label <%= plan.publish == 1 ? 'text-success' : 'text-dark' %>"
                                                for="plan_publish_<%= plan.id %>">
                                                <% if (plan.publish == 1) { %>
                                                  <span class="badge badge-success">Publish</span>
                                              <% } else { %>
                                                  <span class="badge badge-danger">Not Publish</span>
                                              <% } %>
                                            </label>
                                        </div>
                                    </div> -->
                                </div>


                              </div>
                            </div>
                          </div>
                        <% }); %>
                      </div>



                </div>


            </div>
        </div>
    </div>
</div>

<%- pageJs = `
<script src="/plugins/custom/datatables/datatables.bundle.js"></script>
<script src="/js/pages/plan.js"></script>
` %>
